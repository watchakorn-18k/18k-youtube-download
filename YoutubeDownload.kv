gridlayout_Screen:

#:import hex kivy.utils.get_color_from_hex
#:set font_text 'font/ChulabhornLikitText-Light.otf'
<gridlayout_Screen>:
    canvas.before:
        Color:
            rgba: hex('#252022')
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 1
    rows: 10
    Image:
        size_hint: 0.1, None
        source: 'logo.png'
        size: '300dp','300dp'
    TextInput:
        id: my_text_input
        text: "สำเร็จ" if root.success_text == "Success" else root.line_yt_text
        size_hint: .1, None
        height: 30
        width: 50
        nultiline: False
        font_name: font_text
    Button:
        text:'ดาวน์โหลดเป็น MP3'
        size_hint: 0.1, None
        on_press: root.on_button_click()
        font_name: 'font/ChulabhornLikitText-Light.otf'
        height: "50dp"
        background_color: '#54c6ff'
        background_normal: '#54c6f0'
        
        canvas.before:
            Color:
                rgba: hex('#333333')
        disabled: True if my_text_input.text == '' else False
    Label:
        text:'กด Ctrl + V เพื่อวางลิงก์'
        font_name: font_text
        font_size: '20sp'
    Label:
        text: root.my_text
        font_name: font_text
    Label:
        text:'Dev. Wk-18K ecq-studio.com/18K/X/'
        font_name: font_text
        font_size: '10sp'
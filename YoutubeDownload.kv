# -*- coding: utf-8 -*-
gridlayout_Screen:

#:import Clipboard kivy.core.clipboard.Clipboard
#:import hex kivy.utils.get_color_from_hex
#:import threading threading
#:import webbrowser webbrowser
#:set font_text 'font/TF_PHETHAI.ttf'
#:set font_text_mini 'font/thaisanslite_r1.ttf'
#:set kanit 'font/Kanit-Light.ttf'

<gridlayout_Screen>:
    canvas.before:
        Color:
            rgba: hex('#252022')
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 1
    padding: 20
    
    Label:
        text:''
    BoxLayout:
        orientation: 'horizontal'
        
        Label:
            text:''
        Button:
            id: btn_1
            on_release: threading.Thread(target=root.animate_it).start()
            size_hint: 1.8, 3.5
            pos_hint: {'center_x': 1, 'center_y': 0.8}
            background_normal: 'Assets/logo.png'
            background_down: 'Assets/logo_disabled.png'
            font_size: '45sp'
            font_name: font_text
            on_release: threading.Thread(target=root.on_open_dir_mp3).start()
        Label:
            text:''
    Label:
        text:''
    RightClickTextInput:
        id: my_text_input
        text: ""
        size_hint: .1, None
        height: 30
        width: 50
        font_size:'15sp'
        multiline: False
        use_bubble: True
        font_name: font_text
    Button:
        id: my_button_1
        text:'ค้นหา/ดาวน์โหลด MP3'
        size_hint: 0.1, None
        on_release: threading.Thread(target=root.on_button_click).start()
        font_name: font_text_mini
        font_size: '25sp'
        height: "45dp"
        background_color: '#e4a136'
        background_normal: '#e4a136'
        background_down: "Assets/button_pressed.png"
        
        canvas.before:
            Color:
                rgba: hex('#333333')
        disabled: True if my_text_input.text == '' else False
    Label:
        text:''

    BoxLayout:
        orientation:'horizontal'
        AsyncImage:
            id: image_youtube
            source: 'Assets/blank.png'
            anim_delay: 0.1
            size_hint: None,None
            size: '140dp','300dp'
            pos_hint: {'x':-1, 'y':-2.4}
            opacity: 1
        Label:
            id: title_youtube
            text:''
            size_hint:None,None
            pos_hint: {'y': -0.40}
            font_name: kanit
            font_size: '15sp'
            text_size:self.size
            halign: 'right'
            valign:"top"
            opacity: 1
        Label:
            id: duration_youtube
            text:''
            size_hint:None,None
            pos_hint: {'y': -0.5}
            font_name: kanit
            font_size: '10sp'
            text_size:self.size
            halign: 'right'
            valign:"top"
            opacity: 1
    Button:
        id: copy_link
        text:'คัดลอกลิงก์'
        font_name: font_text_mini
        size_hint: None,None
        size_hint_x: 1
        size_hint_y: 0.4
        text_size:self.size
        valign:"middle"
        halign: 'center'
        background_color: '#e4a136'
        background_normal: '#e4a136'
        background_down: "Assets/button_pressed.png"
        value: "ecq-studio.com/18K/X/"
        disabled: True if my_text_input.text == '' else False
        opacity: 0
        on_release:
            Clipboard.copy(copy_link.value)
            my_text_input.text = copy_link.value
            notice_text.text = "คลิกดาวน์โหลด MP3"
        
            

    Label:
        id: notice_text
        text: 'ค้นหาเพลงหรือใส่ลิงก์ในช่องว่าง' if my_text_input.text == '' else my_text_input.text[0:25]
        font_name: font_text_mini if my_text_input.text == '' else font_text_mini
        font_size: '30sp' if my_text_input.text == '' else '35sp'
        color: hex('#ffbb00') if my_text_input.text == '' else hex('#ffbb00')
    Label:
        id: label_youtube
        text: root.my_text
        font_name: font_text
        font_size: '23sp'
    Label:
        id: process_text
        text: "" if root.process_download == '' else root.process_download
        font_name: kanit
        font_size: '20sp'
        color: hex('#00ff00') if root.process_download == "ดาวน์โหลดเสร็จแล้ว" else hex('#ffbb00')
    Label:
        id: test
        text: str(int(progress_bar_status.value)) + " %" if progress_bar_status.value != 0 else ""
        font_name: kanit
        font_size: '15sp'
    ProgressBar:
        id: progress_bar_status
        max:100
        min: 0
        value: 0
        size_hint: 0.1, 0.1
        canvas:

            BorderImage:
                border: (6, 6, 6, 6)
                pos: self.x, self.center_y - 6
                size: self.width, 12
            BorderImage:
                border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 6))] * 4
                pos: self.x, self.center_y - 6
                size: self.width * (self.value / float(self.max)) if self.max else 0, 12
                source: 'Assets/button_pressed.png'
        
    Label:
        text:'Dev. Wk-18K version 3.3 https://discord.gg/AsZgC95SYu'
        font_name: font_text_mini
        font_size: '15sp'
        pos: '10dp','20dp'
        size_hint: 0.1, 1

    Button:
        text:'ตรวจเวอร์ชันซอฟต์แวร์'
        font_name: font_text_mini
        font_size: '15sp'
        pos: '10dp','10dp'
        size_hint: 0.1, 0.5
        background_color: '#171516'
        background_normal: '#252022'
        on_release: webbrowser.open('https://github.com/watchakorn-18k/Python-download-YT-MP3/releases/')


<RightClickTextInput>:
    